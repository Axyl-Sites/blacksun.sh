---
import "../styles/bulletin.scss";
import { Icon } from "@astrojs/starlight/components";
---

<div class="container not-content" id="notificationContainer">
    <div class="rectangle">
        <div class="notification-content">
            <div class="icon-title">
                <div class="info-group">
                    <Icon name="information" />
                    <h4>Notice</h4>
                </div>
                <Icon class="close-icon" name="close" />
            </div>
            <ul class="notification-list">
                <li>
                    ðŸŸ  axylprojects.dev is currently being completely revamped and is currently not promised to be complete.
                </li>
                learn more in our
                <a
                    style="text-decoration: none; cursor: pointer;"
                    href="https://discord.gg/J7R7sEZcn9"
                >
                    discord server
                </a>
            </ul>
        </div>
    </div>
</div>

<script>
    const closeIcon = document.querySelector(".close-icon");

    closeIcon.addEventListener("click", function (event) {
        notificationContainer.style.display = "none";
        event.stopPropagation(); // Prevent triggering the container's click event
    });
</script>
